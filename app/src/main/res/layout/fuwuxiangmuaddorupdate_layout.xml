<?xml version="1.0" encoding="utf-8"?>
<com.design.appproject.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/add_box_style"
    android:fillViewport="true">
    <com.design.appproject.widget.MyLinearLayout
        style="@style/add_form_style"
        android:orientation="vertical">
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/fuwumingcheng_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="服务名称"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/fuwumingcheng_et"
            style="@style/add_item_input_style"
            android:hint="服务名称"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            android:id="@+id/fengmian_ll"
            style="@style/add_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:id="@+id/fengmian_tv"
                android:text="封面"
                style="@style/add_item_label_style"/>
            <com.design.appproject.widget.MyImageView
                android:id="@+id/fengmian_ifv"
                style="@style/add_item_img_style"
                android:src="@mipmap/upload"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            style="@style/add_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="服务类型"
                style="@style/add_item_label_style"/>
            <com.design.appproject.widget.BottomSpinner
                android:id="@+id/fuwuleixing_bs"
                style="@style/add_item_picker_box_style"
                android:text="请选择服务类型"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/fuwujiage_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="服务价格"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/fuwujiage_et"
            android:inputType="number"
            style="@style/add_item_input_style"
            android:hint="服务价格"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/fuwushijian_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="服务时间"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/fuwushijian_et"
            style="@style/add_item_input_style"
            android:hint="服务时间"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/storeupnum_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="收藏数量"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/storeupnum_et"
            android:inputType="number"
            style="@style/add_item_input_style"
            android:hint="收藏数量"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            style="@style/add_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="预约须知"
                style="@style/add_item_label_style"/>
            <com.design.appproject.widget.MyEditTextView
                android:id="@+id/yuyuexuzhi_et"
                android:hint="预约须知"
               style="@style/add_item_textarea_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        app:flexWrap="wrap"
        style="@style/add_item_editor_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="服务详情"
            style="@style/add_item_editor_label_style"/>
        <include
                android:id="@+id/fuwuxiangqing_rich_layout"
                layout="@layout/richeditor_layout"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFrameLayout
        style="@style/add_btn_box_style">
        <com.design.appproject.widget.MyButton
            android:id="@+id/submit_btn"
            android:text="提交"
            android:gravity="center"
        style="@style/add_btn_submit_style"/>
    </com.design.appproject.widget.MyFrameLayout>

    </com.design.appproject.widget.MyLinearLayout>
</com.design.appproject.widget.MyScrollView>
